</div>


<script>
    $(document).ready(function () {
        $(document).on("click", ".cancel-case", OpenCancelcase);
        $(document).on("click", ".assign-case", OpenAssigncase);
        $(document).on('click', ".block-case", OpenBlockcase);
        $(document).on('click', ".transfer-case", OpenTransfercase);

        $.ajax({
            url: './FetchRegions',
            method: 'GET',
            success: function (response) {
                response.forEach(function (res) {
                    $('.regionDropDown').append("<option value='" + res.regionid + "'>" + res.name + "</option>");
                });
            }
        });
    });

    function OpenCancelcase() {
        var name = $(this).closest('tr').find('td').first().text();
        var reqid = $(this).data("id");
        $('#Name').html(name);
        $('#reqestid').val(reqid);
        $('model1').modal();
    }

    function OpenAssigncase() {
        var requestid = $(this).data("assreqid");
        $('#assignreqid').val(requestid);
        $('model2').model();
    }

    function OpenTransfercase() {
        var requestid = $(this).data("transreqid");
        $('#transreqid').val(requestid);
        $('model4').model();
    }

    function OpenBlockcase() {
        var name = $(this).closest('tr').find('td').first().text();
        var reqid = $(this).data("blockid");
        $('#blockName').html(name);
        $('#blockreqid').val(reqid);
        $('model3').modal();
    }

    $('#cancelcasesubmit').on('click', function () {

        $.ajax({
            method: "POST",
            url: '@Url.Action("CancelCase", "Admin")',
            data: $('form.cancelcaseform').serialize(),
            success: function (result) {
                console.log("cancel case success");
            }

        });
    });

    $('#assigncasesubmit').on('click', function () {

        $.ajax({
            method: "POST",
            url: '@Url.Action("AssignCase", "Admin")',
            data: $('form.assigncaseform').serialize(),
            success: function (result) {
                // console.log("assign case success");
                alert("Assign case success");
            }

        });
    });

    $('#blockcasesubmit').on('click', function () {

        $.ajax({
            method: "POST",
            url: '@Url.Action("BlockCase", "Admin")',
            data: $('form.blockcaseform').serialize(),
            success: function (result) {
                // console.log("assign case success");
                alert("Block case success");
            }

        });
    });


     $('#transfercasesubmit').on('click', function () {

        $.ajax({
            method: "POST",
            url: '@Url.Action("TransferCase", "Admin")',
            data: $('form.transfercaseform').serialize(),
            success: function (result) {
                // console.log("assign case success");
                alert("Block case success");
            }

        });
    });

    $('.regionDropDown').change(function () {
        var selectregionid = $(this).val();
        var physicianselect = $(".physicianselect");
        physicianselect.empty().append("<option> Select a physician </option>");
        console.log("before url");
        if (selectregionid) {
            $.ajax({
                url: './FetchPhysician?selectregionid=' + selectregionid,
                method: 'GET',
                success: function (response) {
                    console.log(response);

                    response.forEach(function (res) {
                        $('.physicianselect').append("<option value='" + res.physicianid + "'>" + res.name + "</option>");
                    });
                }
            });
        }

    });

</script>
