@model List<DataLayer.DTO.AdminDTO.RequestTableData>



@functions {
    public string GetColor(int RequestTypeId)
    {
        switch (RequestTypeId)
        {
            case 1: return "pink";
            case 2: return "green";
            case 3: return "orange";
            case 4: return "blue";
            default: return "green";
        }
    }
}


    @if (Model.Count > 0)
{
    var type = Model[0].status;

    <div class="table-responsive d-none d-sm-block">

        <table class="table " id="adminTable">
            <thead>
                <tr>
                    <th scope="col">Name</th>

                    @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5)
                    {
                        <th scope="col">Date Of Birth</th>

                    }
                    @if (type == 5)
                    {
                        <th scope="col">Region</th>

                    }
                    @if (type == 1 || type == 2 || type == 3)
                    {
                        <th scope="col">Requestor</th>

                    }
                    @if (type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                    {
                        <th scope="col">Physician Name</th>
                    }
                    @if (type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                    {
                        <th scope="col">Date of service</th>
                    }
                    @if (type == 1)
                    {
                        <th scope="col">Requested date</th>

                    }
                    @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 6)
                    {
                        <th scope="col">Phone</th>

                    }

                    <th scope="col">Address</th>

                    @if (type == 1 || type == 2 || type == 3 || type == 5)
                    {
                        <th scope="col">Notes</th>

                    }
                    @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                    {
                        <th scope="col">Chat With</th>

                    }
                    @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5)
                    {
                        <th scope="col">Actions</th>

                    }
                </tr>
            </thead>
            @foreach (var obj in Model)
            {
                <tbody>

                    <tr class=" align-middle table-@{ @GetColor(obj.RequestTypeId) }">

                        <td scope="row" class="text-white">
                            <div class="d-inline-flex w-100">
                                <div class="w-100">
                                    @obj.Name
                                </div>
                                <div style="border:1px white solid " class="rounded">
                                    <button class="btn text-white">
                                        <i class="fa-regular fa-envelope"></i>
                                    </button>
                                </div>
                            </div>
                        </td>

                        @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5)
                        {
                            <td class="text-white"></td>

                        }
                        @if (type == 5)
                        {
                            <td class="text-white"></td>

                        }
                        @if (type == 1 || type == 2 || type == 3)
                        {
                            <td class="text-white">@obj.Requestor</td>

                        }
                        @if (type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                        {
                            <td class="text-white">@obj.PhysicianName</td>
                        }
                        @if (type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                        {
                            <td class="text-white">@obj.DateOfService.ToString("MMM,dd yyyy")</td>
                        }
                        @if (type == 1)
                        {
                            <td class="text-white">@obj.RequestedDate.ToString("MMM,dd yyyy")</td>

                        }
                        @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 6)
                        {
                            <td class="text-white">
                                <div>
                                    <span class="border border-white rounded p-2"><i class="bi bi-telephone p-2"></i>@obj.Phone</span>
                                </div>

                            </td>

                        }

                        <td class="text-white">@obj.Address</td>

                        @if (type == 1 || type == 2 || type == 3 || type == 5)
                        {
                            @if (obj.Notes == null)
                            {
                                <td class="text-white">-</td>
                            }
                            else
                            {
                                <td class="text-white">
                                    @obj.Notes
                                </td>
                            }

                        }
                        @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                        {
                            <td class="text-white"><button style="border:1px white solid " class="btn rounded d-none d-md-block text-white">Provider</button></td>

                        }
                        <td class="text-white">
                            <div class="dropdown">
                                <button class="btn text-white border border-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu">
                                    @if (type == 1)
                                    {
                                        <li class="">
                                            <button class="btn assign-case" data-toggle="modal" id="assigncasebtn" data-target="#model2" data-assreqid="@obj.RequestId">
                                                <i class="fa-regular fa-file-lines me-2 ms-1"></i>  Assign Case
                                            </button>
                                        </li>

                                    }

                                    @if (type == 1)
                                    {
                                        <li>
                                            <button class="btn cancel-case" data-toggle="modal" data-target="#model1" data-id="@obj.RequestId">
                                                <i class="fa-regular fa-circle-xmark pe-2"></i> Cancel Case
                                            </button>
                                        </li>


                                    }
                                    @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-route-reqId="@obj.RequestId" asp-action="ViewCase"> <i class="fa-solid fa-file-signature"></i> View Case</a></li>


                                    }
                                    @if (type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ViewUploads" asp-route-viewid="@obj.RequestId"><i class="fa-solid fa-file-arrow-up"></i> View Uploads</a></li>


                                    }
                                    @if (type == 1 || type == 2 || type == 3 || type == 4 || type == 5 || type == 6)
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-route-Requestid="@obj.RequestId" asp-action="ViewNotes"> <i class="fa-solid fa-book"></i> View Notes</a></li>

                                    }
                                    @if (type == 3 || type == 4 || type == 5)
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="AdminOrders" asp-route-ordreqid="@obj.RequestId"><i class="fa-solid fa-file-circle-check"></i>Orders</a></li>

                                    }
                                    @if (type == 5)
                                    {
                                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-circle-xmark"></i> Close Case</a></li>

                                    }
                                    @if (type == 3 || type == 4 || type == 5)
                                    {
                                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-file-lines"></i> Doctors Note</a></li>

                                    }

                                    @if (type == 2)
                                    {
                                        <li>
                                            <button class="btn transfer-case" data-toggle="modal" data-target="#model4" data-transreqid="@obj.RequestId">
                                               <i class="fa-solid fa-file-import"></i> Transfer
                                            </button>

                                        </li>


                                    }
                                    @if (type == 2 || type == 5)
                                    {
                                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-circle-xmark"></i> Clear case</a></li>

                                    }
                                    @if (type == 3 || type == 4 || type == 5)
                                    {
                                        <li><a class="dropdown-item" href="#"> <i class="fa-regular fa-file-lines"></i>Encounter</a></li>
                                    }
                                    @if (type == 2)
                                    {
                                        <li><a class="dropdown-item" href="#"><i class="fa-regular fa-file-lines"></i> Send Agreement</a></li>

                                    }
                                    @if (type == 1)
                                    {
                                        <li>
                                            <button class="btn block-case" data-toggle="modal" data-target="#model3" data-blockid="@obj.RequestId">
                                                <i class="fa-solid fa-ban"></i> Block Patient
                                            </button>
                                        </li>

                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>

                </tbody>
            }
        </table>

    </div>
}
else
{
    <p>No data found</p>
}

<!-- Cancel case  Modal -->
<div class="modal fade" id="model1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div style="background-color:#0dcaf0; color:white;" class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Confirm Cancellation</h5>
                <button type="button" class="close btn btn-lg text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="cancelcaseform">
                <div class="modal-body">
                    <input type="number"
                           hidden
                           name="req_id"
                           id="reqestid" />
                    <p>Patient Name : <span id="Name" class="text-info"></span></p>
                    <div class="dropdown bg-light">

                        <select class="form-select" aria-label="Default select example" required>
                            <option selected>Reason for cancellation</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-floating">
                        <textarea class="form-control"
                                  placeholder="Leave a comment here"
                                  id="floatingTextarea"
                                  name="cancelNote"
                                  style="height: 100px" required></textarea>
                        <label for="floatingTextarea">Provide Aditional notes</label>
                    </div>
                </div>
                <div class="modal-footer border-0">

                    <button id="cancelcasesubmit" style="background-color:#0dcaf0; color:white;" type="submit" class="btn ">Confirm</button>


                    <button style="border-color:#0dcaf0; color:#0dcaf0 " type="button" class="btn " data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Assign case  Modal -->
<div class="modal fade" id="model2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div style="background-color:#0dcaf0; color:white;" class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Assign Request</h5>
                <button type="button" class="close btn btn-lg text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="assigncaseform">
                <div class="modal-body">
                    <p style="font-size: 15px">To assign this request, search and select another Physician.</p>
                    <input type="number"
                           hidden
                           name="assign_req_id"
                           id="assignreqid" />
                    <div class="dropdown bg-light">

                        <select class="form-select regionDropDown" name="phy_region" aria-label="Default select example" required>
                            <option>Narrow Search by Region</option>

                        </select>
                    </div>
                    <br />
                    <div class="dropdown bg-light">

                        <select class="form-select physicianselect"  name="phy_id" aria-label="Default select example" required>

                            <option selected>Select Physician</option>

                        </select>
                    </div>
                    <br />
                    <div class="form-floating">
                        <textarea class="form-control"
                                  placeholder="Leave a comment here"
                                  id="floatingTextarea"
                                  name="assignNote"
                                  style="height: 100px" required></textarea>
                        <label for="floatingTextarea">Description</label>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button style="background-color:#0dcaf0; color:white;" id="assigncasesubmit" type="submit" class="btn">Submit</button>
                    <button style="border-color:#0dcaf0; color:#0dcaf0 " type="button" class="btn " data-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


