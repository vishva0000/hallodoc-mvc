    </div>

    <div class="d-flex justify-content-center mt-3">
        <div class="container">

            <div class="d-inline-flex justify-content-between w-100">

                <h3 class="m-2">Create Role</h3>
                <div class="ml-auto">

                    <button class="  back-btn btn-outline-info back mt-2 rounded p-2 "
                            onclick="back()">
                        &lt Back
                    </button>
                </div>
            </div>
            <br />


            <div class="bg-white rounded shadow p-4 mt-3">
            
                <p style="font-weight: bold; font-size:1.5rem">Details</p>
                <br />
                <form class="CreateRoleForm">

             
                <div class="row">                    
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text"                                      
                                       class="form-control "
                                       id="contact"
                                       name="RoleName"
                                       placeholder="name@example.com" />
                                <label for="floatingInput">Role Name</label>
                            </div>

                        </div>

                    <div class="col-md-6">
                        <select style="height:55px;" name="AccountType" class="form-select SelectACType" aria-label="Default select example">
                            <option value="0" selected>All</option>
                            <option value="1">Admin</option>
                            <option value="2">Physician</option>
                            <option value="3">Patient</option>
                        </select>

                    </div>                  
                </div>
                <div class=" d-flex" id="menu">
                     
                    
                </div>
                <div class="w-100 d-flex justify-content-end">
                    <button class="btn btn-info text-white m-2 saveRole">Save</button>
                    <button class="btn btn-outline-info m-2 ">Cancel</button>
                    

                </div>
                </form>
            </div>

        </div>
    </div>

</div>

<script>
    var actype = $('.SelectACType').val();
    $(document).ready(function () {
        $('#menu').empty();

        $.ajax({
            method: "GET",
            url: "/Admin/GetMenus",
            data: { actype: actype },
            success: function (result) {
                result.forEach(function (res) {
                    $('#menu').append('<div class="form-check ms-2 me-2" ><input name="selectedMenu" class="form-check-input" type = "checkbox" value = "' + res.id + '" ><label class="form-check-label" for= "flexCheckDefault" >' +res.name+ '</label>');
                });
               

            }
        });          


        // $(document).on("click", ".contact", OpenContactProvider);


    });


    $('.SelectACType').change(function () {
        actype = $('.SelectACType').val();
        $('#menu').empty();
        $.ajax({
            method: "GET",
            url: "/Admin/GetMenus",
            data: { actype: actype },
            success: function (result) {

                result.forEach(function (res) {
                    $('#menu').append('<div class="form-check ms-2 me-2" ><input name="selectedMenu" class="form-check-input" type = "checkbox" value = "' + res.id + '" ><label class="form-check-label" for= "flexCheckDefault" >' + res.name + '</label>');
                });


            }
        });

    });
   
    $('.saveRole').click(function () {
        // alert($('form.CreateRoleForm').serialize());
        $.ajax({
            method: "Post",
            url: "/Admin/CreateRole",
            data: $('form.CreateRoleForm').serialize(),
            success: function (result) {
                window.location.reload();
            }
        });
    });
</script>
