@{
    Layout = "_Empty";
}
<div class="bg-light mt-5">
   <div class="container">
       <div class="">
            <div class="d-inline-flex w-100 ">
           <h3>Documents</h3>
            <div class="flex-grow-1 d-flex justify-content-end">
                <button class="back-btn btn btn-outline-info " onclick="back()">&lt Back</button>
           </div>
            </div>
           <div class="row">
               <p>Patient Name</p>
               <p><span class="text-info">Name</span></p>
               <p>Check here to review and add files that you or the Client/Member has attached to the Request.</p>
                <div class="">
                    <div class="d-flex"
                         onclick="document.getElementById('choose-file').click()"
                         style="cursor: pointer">
                        <label class="col-8 col-md-10 col-lg-11 upload bg-light"
                               id="fileLabel">Select File</label>
                        <button type="button" class="col-4 col-md-2 col-lg-1 btn btn-info uploadbtn text-white">
                            <img src="./Images/cloud-upload-icon.svg" alt="" />
                            Upload
                        </button>
                        <input name="file" type="file" style="display: none" id="choose-file" />

                    </div>
                </div>
           </div>
           <div class="mt-3 row">
                <div class="d-inline-flex w-100 ">
                    <h3>Documents</h3>
                    <div class="flex-grow-1 d-flex justify-content-end">
                        <button class=" btn btn-outline-info m-2 " >Download All</button>
                        <button class="btn btn-outline-info m-2 " >Delete All</button>
                        <button class="btn btn-outline-info  m-2" >Send Mail</button>
                    </div>
                </div>
           </div>
           <div class="row">
               <table class="table">
                   <thead>
                       <tr>
                           <th></th>
                           <th>Documents</th>
                           <th>Upload Date</th>
                           <th>Actions</th>
                       </tr>
                   </thead>
                   <tbody>
                       <tr></tr>
                   </tbody>
               </table>
           </div>
       </div>
   </div>
</div>