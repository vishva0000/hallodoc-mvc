<script>
    var str = str = $('.StateDrop').val();  
    $(document).ready(function () {

        $.ajax({
            method: "GET",
            url: "/Admin/GetUserAccess",
            data: { search: str },
            success: function (result) {
                if (result.includes("table")) {
                    $("#UserAccessTable").html(result);
                } else {
                    window.location.reload();
                }
            }
        });
        $('.createProvider').hide();
        $('.createAdmin').hide();

    });

    function SearchByRegion() {
        str = $('.StateDrop').val();
        if (str == "1") {
            $('.createAdmin').show();
            $('.createProvider').hide();

        }
        else if (str=="2") {
            $('.createProvider').show();
            $('.createAdmin').hide();


        }else{
            $('.createProvider').hide();
            $('.createAdmin').hide();
        }
        $.ajax({
            method: "GET",
            url: "/Admin/GetUserAccess",
            data: { search: str },
            success: function (result) {
                if (result.includes("table")) {
                    $("#UserAccessTable").html(result);
                } else {
                    window.location.reload();
                }

            }
        });
    }
</script>