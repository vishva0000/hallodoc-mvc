@{
    Layout = "_RequestHeader";
}
<div class="d-flex justify-content-center mt-5">
    <!-- <div class="position-absolute top-50 start-50 translate-middle"> -->
    <div class="mt-5">
        <div class="d-inline-flex">
            <h2 class="m-3">I am a...</h2>
            <button style="position: absolute; right: 15%"
                    class="back-btn back mt-2 rounded p-2"
                    onclick="back()">
                &lt Back
            </button>
        </div>
        <a class="w-100" asp-controller="Patient" asp-action="PatientRequest">
            <div class="patient-btn m-2 p-2 rounded s-div"
