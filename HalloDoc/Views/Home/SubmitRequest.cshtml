                <p style=" font-weight: bold;">FAMILY/FRIEND</p>
            </div>
        </a>
        <a asp-controller="Patient" asp-action="ConciergeRequest">
            <div class="concierge-btn m-2 p-2 rounded s-div"
                 onclick="window.location.href='createConciergeRequest.html'">
                <p style=" font-weight: bold;">CONCIERGE</p>
            </div>
        </a>
        <a asp-controller="Patient" asp-action="BusinessRequest">

            <div class="business-btn m-2 p-2 rounded s-div">
                <p style=" font-weight: bold;">BUSINESS PARTNERS</p>
            </div>
        </a>



    </div>
