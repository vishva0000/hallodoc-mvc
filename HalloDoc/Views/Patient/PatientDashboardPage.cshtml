@model List<DataLayer.DTO.PatientDashboard>
@{
    Layout = "_Patientdashboard";

}
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<link rel=”stylesheet” href=”https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css” />
<div class="">
    <div class="p-2">
        <ul class="nav ">
            <li style=" cursor: pointer; " class="nav-item custom-tab">

                <a style="color: #0dcaf0;" class="nav-link  text-decoration-none">Dashboard </a>
            </li>
            <li style=" cursor: pointer;" class="nav-item">
                <a asp-action="PatientProfile" asp-asp-controller="Patient" class="nav-link text-decoration-none text-dark">Profile</a>
            </li>
        </ul>
    </div>

    <div class=" d-flex justify-content-center bg-light ">

        <div class="container ">
            <div class="d-inline-flex justify-content-between w-100">
                <h2 class="m-2">Medical History</h2>
                <div class="ml-auto">
                </div>
            </div>

            <div class="bg-white rounded-3">

                <div class="d-inline-flex justify-content-between w-100">

                    <h2></h2>
                    <div class="ml-auto p-2">


                        <button class=" btn-outline-info back-btn back mt-2 rounded p-2" data-toggle="modal" data-target="#model1">
                            Create New Request
                        </button>
                    </div>

                </div>

                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th>Created Date  ↓ </th>
                            <th>Current Status</th>
                            <th>Document</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        @foreach(var item in Model)
                        {
                        <tr>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                        @if (item.status== 1)
                        {
                        <td>
                        Unassigned
                        </td>

                        }
                        else if(item.status==2)
                        {
                        <td>Accepted</td>
                        }
                        else if (item.status== 3)
                        {
                        <td>Cancelled</td>
                        }
                        else
                        {
                        <td>Reserving</td>
                        }

                        @if(item.count>=1){
                        <td>


                        <a asp-controller="Patient" asp-action="ViewDocument" asp-route-requestId="@item.RequestID">
                        <button class="btn btn-outline-info"><span>(@item.count)</span> Document </button>
                        </a>
                        </td>
                        }
                        else
                        {
                        <td></td>
                        } 
                        </tr>

                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="model1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div style="background-color:#0dcaf0; color:white;" class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create New Request</h5>
                    <button type="button" class="close btn btn-lg text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Here I want to create new request for...</p>
                    <div class="align-text-center ps-5 ml-2">
                        <a asp-controller="Patient" asp-action="RequestForMe">
                            <button style="background-color:#0dcaf0; color:white;" type="button" class="btn m-2">Me</button>

                        </a>
                        <a asp-controller="Patient" asp-action="RequestForSomeoneElse">
                            <button style="border-color:#0dcaf0; color:#0dcaf0 " type="button" class="btn m-2">Some One Else</button>

                        </a>

                    </div>


                </div>
                <div class="modal-footer border-0">
                    <a asp-controller="Home" asp-action="SubmitRequest">
                        <button style="background-color:#0dcaf0; color:white;" type="button" class="btn ">Continue</button>

                    </a>
                    <button style="border-color:#0dcaf0; color:#0dcaf0 " type="button" class="btn " data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</div>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
