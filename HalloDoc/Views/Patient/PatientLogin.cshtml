@model HalloDoc.DTO.PatientLogin
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
@using (Html.BeginForm())
{
   
<div class="d-flex justify-content-center mt-5 main">
    <div class="mt-5 pt-5">
        <button class="back-btn rounded mb-3" onclick="back()">&lt Back</button>

        <h2 class="text-center">Login Into Your Account</h2>
        <br />
        <form asp-action="Patientlogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3 border rounded ">
                <input type="text"
                       placeholder="Email"
                       class="form-control outlined-input"
                       asp-for="Email"
                       aria-describedby="basic-addon2"  />
                <button class="btn" type="button">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         width="16"
                         height="16"
                         fill="currentColor"
                         class="bi bi-person-circle"
                         viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd"
                              d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                </button>


            </div>
                <span class="text-danger">
                    @Html.ValidationMessage("Email")

                </span>

            <div class="input-group mb-3 border rounded">
                <input id="password"
                       type="password"
                       asp-for="Password"
                       class="form-control"
                       placeholder="Password"
                       aria-describedby="basic-addon2" />
                <div class="input-group-append">
                    <button onclick="togglePass()" class="btn" type="button">
                        <div id="icon">
                            <svg id="hide"
                                 xmlns="http://www.w3.org/2000/svg"
                                 width="16"
                                 height="16"
                                 fill="currentColor"
                                 class="bi bi-eye-slash"
                                 viewBox="0 0 16 16">
                                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7 7 0 0 0-2.79.588l.77.771A6 6 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755q-.247.248-.517.486z" />
                                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829" />
                                <path d="M3.35 5.47q-.27.24-.518.487A13 13 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7 7 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12z" />
                            </svg>
                            <svg id="show"
                                 xmlns="http://www.w3.org/2000/svg"
                                 width="16"
                                 height="16"
                                 fill="currentColor"
                                 class="bi bi-eye"
                                 viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                            </svg>
                        </div>
                    </button>
                </div>
            </div>
                <span class="text-danger">
                    @Html.ValidationMessage("Password")

                </span>

            <button type="submit"
                    class="btn blue-background text-light btn-lg btn-block w-100">
                Login
            </button>

        </form>
        <br />
        <br />
        <p class="text-center">
            <a class="text-center blue" asp-controller="Patient" asp-action="ForgetPassword">Forgot password ?</a>
        </p>
    </div>
</div>
}